            android:layout_below="@id/fragment_doing_baseLine"
            android:layout_marginTop="25dp"
            android:text="@string/fragment_doing_tv_set"

            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_content" />

        <TextView
