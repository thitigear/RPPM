            android:layout_toEndOf="@id/fragment_doing_timeMax"
            android:text="@string/fragment_doing_tv_time02"

            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_content" />

        <TextView
            android:id="@+id/fragment_doing_tv_doAngle"
            android:layout_width="@dimen/tv_textWidth"
            android:layout_height="@dimen/tv_textHeight"
            android:layout_alignStart="@id/fragment_doing_tv_set"
            android:layout_below="@id/fragment_doing_tv_doTime"
            android:layout_marginTop="15dp"
            android:text="@string/fragment_doing_tv_angle01"

            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_content" />

        <TextView
            android:id="@+id/fragment_doing_angleNum"
            android:layout_width="180dp"
            android:layout_height="@dimen/tv_textHeight"
            android:layout_alignTop="@id/fragment_doing_tv_doAngle"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/fragment_doing_tv_doAngle"

            android:background="#d4d4d4"

            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/textPrimary"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tv_textHeight"
            android:layout_alignTop="@id/fragment_doing_tv_doAngle"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/fragment_doing_angleNum"
            android:text="@string/fragment_doing_tv_angle02"

            android:textAlignment="textEnd"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_content" />

