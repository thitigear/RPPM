<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DoingFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="Start Recovering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"

            android:textSize="@dimen/text_header"
            android:textColor="@color/textPrimary"/>

            <TextView android:text="ชื่อท่า" android:id="@+id/fragment_doing_tv_treatName"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                android:layout_width="wrap_content"


                android:padding="10dp"

                android:textSize="@dimen/text_content"
                android:textColor="@color/textPrimary" />

            <TextView android:id="@+id/fragment_startRe_treatName"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@id/fragment_doing_tv_treatName"
                android:layout_marginStart="100dp"

                android:text=""
                android:textColor="@color/textPrimary"
                android:textSize="20sp" />
        <android.support.design.internal.BaselineLayout
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:layout_marginTop="170dp"
            android:layout_width="360dp"
            android:background="@color/textPrimary"/>

        <TextView android:text="เซ็ต" android:id="@+id/fragment_doing_tv_set"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="180dp"
            android:layout_width="wrap_content"

            android:padding="10dp"

            android:textSize="@dimen/text_content"
            android:textColor="@color/textPrimary"/>

            <TextView android:id="@+id/fragment_doing_setNum"
                android:layout_alignBaseline="@id/fragment_doing_tv_set"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"

                android:background="#d4d4d4"

                android:text=""
                android:textColor="@color/textPrimary"
                android:textSize="20sp" />
            <TextView android:id="@+id/fragment_doing_slash1"
                android:layout_alignBaseline="@id/fragment_doing_tv_set"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/fragment_doing_setNum"

                android:text="/"
                android:textAlignment="center"
                android:textColor="@color/textPrimary"
                android:textSize="20sp" />

            <TextView android:id="@+id/fragment_doing_setMax"
                android:layout_alignBaseline="@id/fragment_doing_tv_set"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/fragment_doing_slash1"

                android:background="#d4d4d4"

                android:text=""
                android:textColor="@color/textPrimary"
                android:textSize="20sp" />

        <TextView android:text="ทำไป" android:id="@+id/fragment_doing_tv_doTime"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="225dp"
            android:layout_width="wrap_content"

            android:padding="10dp"
            android:textSize="@dimen/text_content"
            android:textColor="@color/textPrimary"/>

            <TextView android:id="@+id/fragment_doing_timeNum"
                android:layout_alignBaseline="@id/fragment_doing_tv_doTime"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"

                android:background="#d4d4d4"

                android:text=""
                android:textColor="@color/textPrimary"
                android:textSize="20sp" />

            <TextView android:id="@+id/fragment_doing_slash"
                android:layout_alignBaseline="@id/fragment_doing_tv_doTime"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/fragment_doing_timeNum"

                android:text="/"
                android:textAlignment="center"
                android:textColor="@color/textPrimary"
                android:textSize="20sp" />

            <TextView android:id="@+id/fragment_doing_timeMax"
                android:layout_alignBaseline="@id/fragment_doing_tv_doTime"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/fragment_doing_slash"

                android:background="#d4d4d4"

                android:text=""
                android:textColor="@color/textPrimary"
                android:textSize="20sp" />

            <TextView android:text="ครั้ง"
                android:layout_alignBaseline="@id/fragment_doing_tv_doTime"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/fragment_doing_timeMax"
                android:layout_width="60dp"

                android:padding="10dp"
                android:textSize="@dimen/text_content"
                android:textAlignment="textEnd"
                android:textColor="@color/textPrimary"/>

        <TextView android:text="มุม" android:id="@+id/fragment_doing_tv_doAngle"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="265dp"
            android:layout_width="wrap_content"

            android:padding="10dp"
            android:textSize="@dimen/text_content"
            android:textColor="@color/textPrimary"/>

        <TextView android:id="@+id/fragment_doing_angleNum"
            android:layout_alignBaseline="@id/fragment_doing_tv_doAngle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"

            android:background="#d4d4d4"

            android:text=""
            android:textColor="@color/textPrimary"
            android:textSize="20sp" />

        <TextView android:id="@+id/fragment_doing_slash3"
            android:layout_alignBaseline="@id/fragment_doing_angleNum"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/fragment_doing_timeNum"

            android:text="/"
            android:textAlignment="center"
            android:textColor="@color/textPrimary"
            android:textSize="20sp" />

        <TextView android:id="@+id/fragment_doing_angleMax"
            android:layout_alignBaseline="@id/fragment_doing_tv_doAngle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/fragment_doing_slash"

            android:background="#d4d4d4"

            android:text=""
            android:textColor="@color/textPrimary"
            android:textSize="20sp" />

        <TextView android:text="องศา"
            android:layout_alignBaseline="@id/fragment_doing_tv_doAngle"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/fragment_doing_timeMax"
            android:layout_width="60dp"

            android:padding="10dp"
            android:textAlignment="textEnd"
            android:textSize="@dimen/text_content"
            android:textColor="@color/textPrimary"/>

        <TextView android:text="lElbow" android:id="@+id/doing_tv_lElbow"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:layout_width="wrap_content"/>
            <TextView android:id="@+id/doing_lElbow"
                android:layout_alignBaseline="@id/doing_tv_lElbow"
                android:layout_height="30dp"
                android:layout_width="100dp"
                android:layout_toEndOf="@id/doing_tv_lElbow"
                android:textSize="@dimen/text_content"/>
        <TextView android:text="rElbow" android:id="@+id/doing_tv_rElbow"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:layout_toEndOf="@id/doing_lElbow"
            android:layout_width="wrap_content"/>
            <TextView android:id="@+id/doing_rElbow"
                android:layout_alignBaseline="@id/doing_tv_lElbow"
                android:layout_height="30dp"
                android:layout_width="100dp"
                android:layout_toEndOf="@id/doing_tv_rElbow"
                android:textSize="@dimen/text_content"/>

        <TextView android:text="lWrist" android:id="@+id/doing_tv_lWrist"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_width="wrap_content" />
            <TextView android:id="@+id/doing_lWrist"
                android:layout_alignBaseline="@id/doing_tv_lWrist"
                android:layout_height="30dp"
                android:layout_width="100dp"
                android:layout_toEndOf="@id/doing_tv_lElbow"
                android:textSize="@dimen/text_content"/>
        <TextView android:text="rWrist  " android:id="@+id/doing_tv_rWrist"
            android:layout_alignBaseline="@id/doing_tv_lWrist"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/doing_lWrist"
            android:layout_width="wrap_content"/>
            <TextView android:id="@+id/doing_rWrist"
                android:layout_alignBaseline="@id/doing_tv_lWrist"
                android:layout_height="30dp"
                android:layout_width="100dp"
                android:layout_toEndOf="@id/doing_tv_rWrist"
                android:textSize="@dimen/text_content"/>

        <TextView android:text="lKnee  " android:id="@+id/doing_tv_lKnee"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:layout_width="wrap_content" />
            <TextView android:id="@+id/doing_lKnee"
                android:layout_alignBaseline="@id/doing_tv_lKnee"
                android:layout_height="30dp"
                android:layout_width="100dp"
                android:layout_toEndOf="@id/doing_tv_lKnee"
                android:textSize="@dimen/text_content"/>
        <TextView android:text="rKnee  " android:id="@+id/doing_tv_rKnee"
            android:layout_alignBaseline="@id/doing_tv_lKnee"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/doing_lKnee"
            android:layout_width="wrap_content"/>
            <TextView android:id="@+id/doing_rKnee"
                android:layout_alignBaseline="@id/doing_tv_lKnee"
                android:layout_height="30dp"
                android:layout_width="100dp"
                android:layout_toEndOf="@id/doing_tv_rKnee"
                android:textSize="@dimen/text_content"/>

        <TextView android:text="lAnkle " android:id="@+id/doing_tv_lAnkle"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:layout_width="wrap_content" />
            <TextView android:id="@+id/doing_lAnkle"
                android:layout_alignBaseline="@id/doing_tv_lAnkle"
                android:layout_height="30dp"
                android:layout_width="100dp"
                android:layout_toEndOf="@id/doing_tv_lAnkle"
                android:textSize="@dimen/text_content"/>
        <TextView android:text="rAnkle " android:id="@+id/doing_tv_rAnkle"
            android:layout_alignBaseline="@id/doing_tv_lAnkle"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/doing_lAnkle"
            android:layout_width="wrap_content"/>
            <TextView android:id="@+id/doing_rAnkle"
                android:layout_alignBaseline="@id/doing_tv_lAnkle"
                android:layout_height="30dp"
                android:layout_width="100dp"
                android:layout_toEndOf="@id/doing_tv_rAnkle"
                android:textSize="@dimen/text_content"/>


    <Button android:id="@+id/fragment_doing_buttonStop"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@drawable/button_buttom_red2"
        android:text="Stop"
        android:textSize="@dimen/text_sub_header"
        android:textAlignment="center"
        android:textColor="@color/textSecondary"
        android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</FrameLayout>