            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Start Recovering"

            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_header" />

        <TextView
            android:id="@+id/fragment_doing_tv_treatName"
            android:layout_width="@dimen/tv_textWidth"
            android:layout_height="@dimen/tv_textHeight"
            android:layout_below="@id/fragment_doing_tv_001"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/fragment_doing_tv_treatName"


            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_content" />

        <TextView
            android:id="@+id/fragment_startRe_treatName"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignTop="@id/fragment_doing_tv_treatName"
            android:layout_marginStart="100dp"

            android:text=""
            android:textColor="@color/textPrimary"
            android:textSize="20sp" />

        <android.support.design.internal.BaselineLayout
            android:id="@+id/fragment_doing_baseLine"
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_below="@id/fragment_startRe_treatName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@color/textPrimary" />

        <TextView
            android:id="@+id/fragment_doing_tv_set"
            android:layout_width="@dimen/tv_textWidth"
