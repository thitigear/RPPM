<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gear.rppm.fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/fragment_home_header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/fragment_home_header"
            android:textSize="@dimen/text_header"
            android:textColor="@color/treatment_good"
            android:textAlignment="center"
            android:textStyle="bold"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/text_header_mtop"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>

        <ScrollView android:id="@+id/fragment_home_scrollview"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="110dp"
            android:layout_centerHorizontal="true">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView android:id="@+id/fragment_home_content1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="@string/fragment_home_content1"
                    android:textSize="@dimen/text_content" />
                <TextView />

                <TextView android:id="@+id/fragment_home_content2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="@string/fragment_home_content2"
                    android:textSize="@dimen/text_content" />
                <TextView />

                <TextView android:id="@+id/fragment_home_content3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="@string/fragment_home_content3"
                    android:textSize="@dimen/text_content"
                    />
                <TextView />

                <TextView android:id="@+id/fragment_home_content4"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="@string/fragment_home_content4"
                    android:textSize="@dimen/text_content" />
                <TextView />

                <TextView android:id="@+id/fragment_home_content5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="@string/fragment_home_content5"
                    android:textSize="@dimen/text_content" />
                <TextView />

                <TextView android:id="@+id/fragment_home_content6"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="@string/fragment_home_content6"
                    android:textSize="@dimen/text_content" />
                <TextView />

            </TableLayout>


        </ScrollView>

        <TextView android:id="@+id/fragment_home_contentChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/fragment_home_contentChoice"
            android:textSize="@dimen/text_content"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"

            android:layout_marginTop="320dp"
            android:layout_centerHorizontal="true"/>

        <Button android:id="@+id/fragment_home_button1"
            android:layout_width="230dp"
            android:layout_height="90dp"

            android:background="@drawable/rppm_fm_home_choice_arms"

            android:layout_marginTop="360dp"
            android:layout_centerHorizontal="true"
            />

        <Button android:id="@+id/fragment_home_button2"
            android:layout_width="230dp"
            android:layout_height="90dp"

            android:background="@drawable/rppm_fm_home_choice_legs"

            android:layout_marginTop="450dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</FrameLayout>
