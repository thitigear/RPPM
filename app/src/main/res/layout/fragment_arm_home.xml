<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gear.rppm.fragment.ArmHomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:textSize="@dimen/text_header"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_arm_home_caption"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="40dp"/>

        <TextView
            android:textSize="@dimen/text_sub_header"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@string/fragment_arm_home_desc"/>

        <ListView android:id="@+id/fragment_arm_home_lv"
            android:layout_width="300dp"
            android:layout_height="400dp"

            android:layout_marginTop="130dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</FrameLayout>
