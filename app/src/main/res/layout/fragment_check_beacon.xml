<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gear.rppm.fragment.CheckBeaconFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="@string/fragment_chk_beacon_caption"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"

            android:textSize="@dimen/text_sub_header"
            android:textAlignment="center"
            android:textColor="@color/textPrimary"/>

        <TextView android:text="@string/fragment_chk_beacon_desc"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"

            android:textSize="@dimen/text_content"
            android:textAlignment="center" />

        <ListView android:id="@+id/fragment_chk_beacon_lv"
            android:layout_width="300dp"
            android:layout_height="400dp"

            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
